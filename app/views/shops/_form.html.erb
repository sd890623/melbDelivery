<%= form_for(shop) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <% if shop.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

          <ul>
          <% shop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, '名称' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description, '简介' %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :open_hour, '开门时间' %>
        <%= f.text_field :open_hour, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :close_hour, '关门时间' %>
        <%= f.text_field :close_hour, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :mobile, '电话' %>
        <%= f.text_field :mobile, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address_street, '街道' %>
        <%= f.text_field :address_street, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address_suburt, '区' %>
        <%= f.text_field :address_suburb, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image, '图片' %>
        <%= f.file_field :image %>
      </div>

      <div class="actions">
        <%= f.submit '提交', class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
